{
  "name": "react-on-maxs",
  "version": "1.0.0",
  "description": "React with modern development tools and best practices",
  "author": "Aleksandr Snov <snov.contact@gmail.com>",
  "main": "server/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server/index.js",
    "start:dev": "cross-env-shell NODE_ENV=development \"yarn build:client && yarn build:server && nodemon server/index.js --watch server\"",
    "dev": "cross-env-shell NODE_ENV=development HOT=true \"yarn build:server && node server/index.js\"",
    "test": "jest",
    "lint": "eslint src config",
    "type-check": "yarn run flow",
    "prettify": "yarn run prettier --write \"{src,config}/**/*.js\"",
    "precommit": "lint-staged && yarn lint && yarn type-check && yarn test",
    "build:client": "webpack --config config/webpack/client.js",
    "build:server": "webpack --config config/webpack/server.js",
    "build:production": "cross-env-shell NODE_ENV=production \"yarn build:client && yarn build:server\"",
    "watch:server": "yarn build:server --watch",
    "watch:client": "yarn build:client --watch",
    "watch": "npm-run-all -l -p watch:server watch:client"
  },
  "jest": {
    "rootDir": "",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/",
      "<rootDir>/server/",
      "<rootDir/node_modules/"
    ],
    "testRegex": "(src|config).*(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "commander": "^2.11.0",
    "cross-env": "^5.1.1",
    "emotion": "^8.0.9",
    "express": "^4.16.2",
    "inquirer": "^3.3.0",
    "ramda": "^0.25.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-emotion": "^8.0.9"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.12",
    "babel-cli": "^6.26.0",
    "babel-eslint": "7.2.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.10.0",
    "eslint-config-dqnt": "^2.1.0",
    "flow-bin": "^0.57.3",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "prettier": "1.7.4",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-features": "^2.1.2",
    "webpack-hot-middleware": "^2.20.0"
  }
}
